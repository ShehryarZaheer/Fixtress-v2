<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".activities.LoginAndSignUpMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        android:paddingTop="22dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/fixtress" />


        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:backgroundTint="@android:color/white"
            android:drawableLeft="@mipmap/username_icon"
            android:gravity="center"
            android:hint="First Name..."
            android:padding="10dp"
            android:paddingBottom="4dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="italic" />
        <!--android:background="@drawable/edittext_styling"-->

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:backgroundTint="@android:color/white"
            android:drawableLeft="@mipmap/username_icon"
            android:gravity="center"
            android:hint="Last Name..."
            android:padding="10dp"
            android:paddingBottom="4dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etMobileNum"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:backgroundTint="@android:color/white"
            android:drawableLeft="@mipmap/mobile_icon"
            android:gravity="center"
            android:hint="Mobile num..(optional)"
            android:inputType="phone"
            android:padding="10dp"
            android:paddingBottom="4dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:backgroundTint="@android:color/white"
            android:drawableLeft="@mipmap/email_icon"
            android:gravity="center"
            android:hint="Email..."
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="italic" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="@android:color/white"
                android:drawableLeft="@mipmap/password_icon"
                android:gravity="center"
                android:hint="Password..."
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/etPassword"
                android:layout_alignRight="@+id/etPassword"
                android:layout_alignTop="@+id/etPassword"
                android:padding="10dp"
                android:src="@mipmap/eye_icon" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="@android:color/white"
                android:drawableLeft="@mipmap/password_icon"
                android:gravity="center"
                android:hint="Password..."
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ivToggleConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/etConfirmPassword"
                android:layout_alignRight="@+id/etConfirmPassword"
                android:layout_alignTop="@+id/etConfirmPassword"
                android:padding="10dp"
                android:src="@mipmap/eye_icon" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnDOB"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/datebutton_selector"
            android:drawableLeft="@mipmap/date_icon"
            android:padding="14dp"
            android:text="Choose Your BirthDate"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvDOB"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/white"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="italic" />
        <!--android:text="Date"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/textgender"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Gender"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:theme="@style/BrandedRadioButton">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Male"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Female"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cbPregnant"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:text="Are you pregnant?"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:theme="@style/BrandedCheckBox" />

            <CheckBox
                android:id="@+id/cbTermsAndConditions"
                android:layout_width="420dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:text="I agree with the terms and conditions"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:theme="@style/BrandedCheckBox" />
            <!--android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp"-->


        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyling_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvAlreadyRegistered"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="Already Registered! Goto Again!"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:textSize="14dp" />
    </LinearLayout>

</ScrollView>

